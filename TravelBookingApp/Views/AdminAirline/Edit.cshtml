@using TravelBooking.Data.ViewModels
@model Airline
@{
    ViewData["Title"] = "Edit an airline";
}

<div class="row">
    <div class="col-md-8 offset-2">
        @if (TempData["AirlineEditOption"] != null)
        {
            <div id="AirlineEditOption" class="flash alert alert-warning">
                @TempData["AirlineEditOption"]
            </div>
        }
        <h2>Edit Airline</h2>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="AdminAirline" asp-action="Edit" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AirlineName">Airline Name</label>
                        <input asp-for="AirlineName" class="form-control form-control-sm" />
                        <span asp-validation-for="AirlineName" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" asp-controller="AdminAirline"
                            asp-route-id="@Model.Id">Update</button>
                        <a class="btn btn-secondary" asp-controller="AdminAirline" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        document.getElementById("AirlineEditOption").style.display = "none";
    }, 3000);
</script>
