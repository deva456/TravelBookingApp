@model Airline
@{
    ViewData["Title"] = "Add a airline";
}

<div class="row">
    <div class="col-md-8 offset-2">
        @if (TempData["AirlineCreateOption"] != null)
        {
            <div id="AirlineCreateOption" class="flash alert alert-warning">
                @TempData["AirlineCreateOption"]
            </div>
        }
        <h2>Add Airline</h2>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AirlineName">Airline Name</label>
                        <input asp-for="AirlineName" class="form-control form-control-sm" />
                        <span asp-validation-for="AirlineName" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a class="btn btn-secondary" asp-controller="AdminAirline" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        document.getElementById("AirlineCreateOption").style.display = "none";
    }, 3000);
</script>